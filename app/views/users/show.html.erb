<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.kinous.each do |t| %>
  <%= t.name %>
  <%= t.genre %>
  <%= t.about %>
  <%= image_tag t.image_url, size: "300x250" if t.image? %>
  <%= t.age %>
  <%= t.sex %>
  <%= t.weight %>
  <%= t.height %>
  <%= t.frequency %>
  <%= t.period %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_kinous.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
  <%= t.genre %>
  <%= t.about %>
  <%= image_tag t.image_url, size: "300x250" if t.image? %>
  <%= t.age %>
  <%= t.sex %>
  <%= t.weight %>
  <%= t.height %>
  <%= t.frequency %>
  <%= t.period %>
<% end %>
<!-- ここまで-->

<%= link_to "一覧に戻る", kinous_path %>